<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background1"
    android:gravity="center_horizontal">

    <androidx.cardview.widget.CardView
        android:id="@+id/grad"
        android:layout_width="300dp"
        android:layout_height="400dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="160dp"
        app:cardBackgroundColor="#51000000"
        app:cardCornerRadius="15dp"
        app:contentPadding="16dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="369dp">

            <TextView
                android:id="@+id/txtAdd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:shadowColor="#000000"
                android:shadowDx="1"
                android:shadowDy="2"
                android:shadowRadius="8"
                android:text="@string/selamat_datang_di_aplikasi_ini"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="24sp"
                />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnUbahBg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtAdd"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"
                app:backgroundTint="@null"
                android:background="@drawable/grad_back"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:text="@string/ubah_background"
                android:textColor="@color/white" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>